<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Virtual input bar -->
        <TextView
            android:id="@+id/gpt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textColor="#000000"
            android:padding="8dp"
            android:text="Type to translate"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="4dp" />

        <!-- Top buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_toggle_lang"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:text="EN ↔ FR" />

            <Button
                android:id="@+id/btn_translate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:text="AI Translate" />
        </LinearLayout>

        <!-- Row 1 -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button android:id="@+id/key_a" android:text="A"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_z" android:text="Z"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_e" android:text="E"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_r" android:text="R"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_t" android:text="T"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_y" android:text="Y"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_u" android:text="U"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_i" android:text="I"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_o" android:text="O"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_p" android:text="P"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button android:id="@+id/key_q" android:text="Q"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_s" android:text="S"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_d" android:text="D"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_f" android:text="F"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_g" android:text="G"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_h" android:text="H"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_j" android:text="J"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_k" android:text="K"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_l" android:text="L"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_m" android:text="M"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button android:id="@+id/key_w" android:text="W"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_x" android:text="X"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_c" android:text="C"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_v" android:text="V"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_b" android:text="B"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_n" android:text="N"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
            <Button android:id="@+id/key_delete" android:text="⌫"
                android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                android:minHeight="0dp" android:layout_margin="2dp" android:padding="4dp" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/key_space"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:text="Space" />

            <Button
                android:id="@+id/key_enter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:text="⏎" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
