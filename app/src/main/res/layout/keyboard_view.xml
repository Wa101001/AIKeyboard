<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:padding="8dp"
    android:gravity="center">

    <!-- Top Bar: Language Toggle + Translate -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_toggle_lang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="FR → EN" />

        <Button
            android:id="@+id/btn_translate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="AI Translate" />
    </LinearLayout>

    <!--GPT Input View

<TextView
  android:id="@+id/gpt_input"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:minHeight="48dp"
  android:padding="8dp"
  android:background="#ffffff"
  android:textColor="#000000"
  android:text="Type here..."
  android:textSize="16sp"
  android:layout_marginBottom="8dp" />
-->
   <!-- Row 1 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/key_a" android:layout_width="0dp" android:layout_weight="1" android:text="A" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_z" android:layout_width="0dp" android:layout_weight="1" android:text="Z" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_e" android:layout_width="0dp" android:layout_weight="1" android:text="E" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_r" android:layout_width="0dp" android:layout_weight="1" android:text="R" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_t" android:layout_width="0dp" android:layout_weight="1" android:text="T" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_y" android:layout_width="0dp" android:layout_weight="1" android:text="Y" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_u" android:layout_width="0dp" android:layout_weight="1" android:text="U" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_i" android:layout_width="0dp" android:layout_weight="1" android:text="I" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_o" android:layout_width="0dp" android:layout_weight="1" android:text="O" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_p" android:layout_width="0dp" android:layout_weight="1" android:text="P" android:layout_height="wrap_content" android:minHeight="48dp"/>
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/key_q" android:layout_width="0dp" android:layout_weight="1" android:text="Q" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_s" android:layout_width="0dp" android:layout_weight="1" android:text="S" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_d" android:layout_width="0dp" android:layout_weight="1" android:text="D" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_f" android:layout_width="0dp" android:layout_weight="1" android:text="F" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_g" android:layout_width="0dp" android:layout_weight="1" android:text="G" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_h" android:layout_width="0dp" android:layout_weight="1" android:text="H" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_j" android:layout_width="0dp" android:layout_weight="1" android:text="J" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_k" android:layout_width="0dp" android:layout_weight="1" android:text="K" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_l" android:layout_width="0dp" android:layout_weight="1" android:text="L" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_m" android:layout_width="0dp" android:layout_weight="1" android:text="M" android:layout_height="wrap_content" android:minHeight="48dp"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/key_w" android:layout_width="0dp" android:layout_weight="1" android:text="W" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_x" android:layout_width="0dp" android:layout_weight="1" android:text="X" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_c" android:layout_width="0dp" android:layout_weight="1" android:text="C" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_v" android:layout_width="0dp" android:layout_weight="1" android:text="V" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_b" android:layout_width="0dp" android:layout_weight="1" android:text="B" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_n" android:layout_width="0dp" android:layout_weight="1" android:text="N" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_delete" android:layout_width="0dp" android:layout_weight="1" android:text="⌫" android:layout_height="wrap_content" android:minHeight="48dp"/>
    </LinearLayout>

    <!-- Bottom Row: Space + Enter -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button android:id="@+id/key_space" android:layout_width="0dp" android:layout_weight="4" android:text="Space" android:layout_height="wrap_content" android:minHeight="48dp"/>
        <Button android:id="@+id/key_enter" android:layout_width="0dp" android:layout_weight="1" android:text="⏎" android:layout_height="wrap_content" android:minHeight="48dp"/>
    </LinearLayout>

</LinearLayout>
